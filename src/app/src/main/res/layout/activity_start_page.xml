<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartPageActivity"
    android:background="#FFFFFF">

    <include
        android:id="@+id/login_toolbar"
        layout="@layout/upper_bar_layout" />

    <ImageView
        android:id="@+id/bubble_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:src="@drawable/bubble_image"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/logo_name"
        android:layout_below="@+id/bubble_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        android:src="@drawable/name_image"/>

    <EditText
        android:id="@+id/email_login_id"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/logo_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:hint="E-mail"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textColorHint="#FF00FF"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawablePadding="15dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="1dp"
        android:background="#FF00FF"
        android:layout_below="@id/email_login_id"/>

    <EditText
        android:id="@+id/pw_login_id"
        android:layout_width="300dp"
        android:maxLines="1"
        android:layout_height="40dp"
        android:layout_below="@+id/email_login_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:hint=". . . . . ."
        android:inputType="textPassword"
        android:padding="8dp"
        android:ems="10"
        android:textColorHint="#FF00FF"
        android:drawableStart="@drawable/lock_black"
        android:drawablePadding="15dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="1dp"
        android:background="#FF00FF"
        android:layout_below="@id/pw_login_id"/>

    <Button
        android:id="@+id/signinBtn"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@+id/pw_login_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/colorchangebutton"
        android:padding="5dp"
        android:hapticFeedbackEnabled="true"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/signupBtn"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@+id/signinBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/colorchangebutton"
        android:padding="5dp"
        android:hapticFeedbackEnabled="true"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>