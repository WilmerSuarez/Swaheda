<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/revLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF00FF"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_visit_user_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:src="@drawable/default_profile_picture"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="5dp">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/profile_visit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/profile_visit_user_image"
            android:text="User Name"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </RelativeLayout>
        <Button
            android:id="@+id/sendRequestButton"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/revLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/colorchangebutton"
            android:drawableLeft="@drawable/add"
            android:paddingStart="10dp"
            android:hapticFeedbackEnabled="true"
            android:padding="5dp"
            android:text="Send Friend Request"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/declineRequestButton"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/sendRequestButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/colorchangebutton"
            android:drawableLeft="@drawable/remove"
            android:paddingStart="10dp"
            android:hapticFeedbackEnabled="true"
            android:padding="5dp"
            android:text="Decline Friend Request"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

</RelativeLayout>