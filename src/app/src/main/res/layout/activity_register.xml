<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#FFFFFF">

    <include
        layout="@layout/upper_bar_layout"
        android:id="@+id/signup_toolbar" />

    <ImageView
        android:id="@+id/bubble_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:src="@drawable/bubble_image"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/logo_name"
        android:layout_below="@+id/bubble_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="195dp"
        android:src="@drawable/name_image"/>

    <EditText
        android:id="@+id/registerName_id"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:maxLines="1"
        android:layout_centerInParent="true"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/logo_name"
        android:background="@android:color/transparent"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColorHighlight="#FF00FF"
        android:textColorHint="#FF00FF"
        android:drawableStart="@drawable/ic_person_outline_black_24dp"
        android:drawablePadding="15dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:background="#FF00FF"
        android:layout_below="@id/registerName_id"/>

    <EditText
        android:id="@+id/registerEmail_id"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/registerName_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:hint="E-mail"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textColorHint="#FF00FF"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawablePadding="15dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="1dp"
        android:background="#FF00FF"
        android:layout_below="@id/registerEmail_id"/>

    <EditText
        android:id="@+id/registerPassword_id"
        android:layout_width="300dp"
        android:maxLines="1"
        android:layout_height="40dp"
        android:layout_below="@+id/registerEmail_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:hint=". . . . . ."
        android:inputType="textPassword"
        android:padding="8dp"
        android:ems="10"
        android:textColorHint="#FF00FF"
        android:drawableStart="@drawable/lock_black"
        android:drawablePadding="15dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="1dp"
        android:background="#FF00FF"
        android:layout_below="@id/registerPassword_id"/>

    <Button
        android:id="@+id/registerAccountBtn_id"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@+id/registerPassword_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/colorchangebutton"
        android:padding="5dp"
        android:hapticFeedbackEnabled="true"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>