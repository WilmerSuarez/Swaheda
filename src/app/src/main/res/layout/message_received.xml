<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:background="#FFFFFF">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_message_profile_receiver"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/default_profile_picture">
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/text_message_name_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/image_message_profile_receiver"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:text="John Doe"
        android:textColor="#E0A2DD"
        tools:ignore="HardcodedText">
    </TextView>
    <TextView
        android:id="@+id/text_message_body_receiver"
        android:text="Hi! How are you?"
        android:background="@drawable/message_text_background2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="7dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/text_message_name_receiver"
        app:layout_constraintLeft_toRightOf="@+id/image_message_profile_receiver"
        android:textColor="#ffffff"
        tools:ignore="HardcodedText">
    </TextView>
    <TextView
        android:id="@+id/text_message_time_receiver"
        android:text="00:00:00"
        app:layout_constraintLeft_toRightOf="@+id/text_message_body_receiver"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#E0A2DD"
        tools:ignore="HardcodedText,SmallSp">
    </TextView>
    <ImageView
        android:id="@+id/message_image_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="300dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_message_time_receiver"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/image_message_profile_receiver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.488"
        tools:ignore="ContentDescription">
    </ImageView>
</android.support.constraint.ConstraintLayout>
